<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" 
"http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

   <!--  Spring IOC container will create only singleton object -->
    <bean class="com.demo.entity.Test" id="test" scope="singleton"></bean>


	<!-- if you want to create multiple objects for a single POJO class then you can use scope. 
	for example : 
		
	<bean class="com.demo.entity.Test" id="test" scope = "prototype"></bean> -->
	
	
</beans>

